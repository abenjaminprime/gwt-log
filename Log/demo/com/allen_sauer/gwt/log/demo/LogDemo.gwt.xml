<module>

	<!-- Inherit the core Web Toolkit stuff.       -->
	<inherits name="com.allen_sauer.gwt.log.gwt-log"/>

	<!-- Specify the app entry point class.                        -->
	<entry-point class="com.allen_sauer.gwt.log.demo.client.LogDemo"/>
  
  <!-- Include CSS             -->
  <stylesheet src="LogDemo.css" />

  <!--
      Extend property to include all six compile time log levels.
      
      Note: Normally you would not do this because this increases the number
            of compile time combinations six fold. However, for this demo, we
            do desire pre-compiled versions for all six levels.
  -->
  <extend-property name="log_level" values="DEBUG,INFO,WARN,ERROR,FATAL,OFF" />
  
  <!-- 
      Enable Remote logging

      <set-property name="log_RemoteLogger" value="ENABLED" />
  -->
  
</module>
