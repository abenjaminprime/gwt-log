<module rename-to="demo">

	<!-- Inherit the core Web Toolkit stuff.       -->
	<inherits name="com.allen_sauer.gwt.log.gwt-log-OFF" />

	<!-- Specify the app entry point class.                        -->
	<entry-point class="com.allen_sauer.gwt.log.demo.client.LogDemo" />

	<!--
		Extend property to include all six compile time log levels. Note:
		Normally you would not do this because this increases the number of
		compile time combinations six fold. However, for this demo, we do
		desire pre-compiled versions for all six levels.
	-->
	<extend-property name="log_level"
		values="TRACE,DEBUG,INFO,WARN,ERROR,FATAL,OFF" />

	<!--
		Enable Remote logging <set-property name="log_RemoteLogger"
		value="ENABLED" />
	-->

	<set-property name="compiler.emulatedStack" value="true" />
	<set-configuration-property name="compiler.emulatedStack.recordLineNumbers" value="true"/>
	<set-configuration-property name="compiler.emulatedStack.recordFileNames" value="true"/>

	<set-configuration-property name="log_pattern" value="(%F:%L) %d [%-5p] %m%n" />

	<!--
    <set-property name="user.agent" value=""/>
    <set-property name="log_level" value="DEBUG"/>
	-->

</module>

