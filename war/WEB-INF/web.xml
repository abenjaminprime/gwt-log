<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE web-app
    PUBLIC "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN"
    "http://java.sun.com/dtd/web-app_2_3.dtd">

<web-app>

	<!--  Servlet for RemoteLogger -->

	<servlet>
		<servlet-name>remoteLoggerServiceImpl</servlet-name>
		<servlet-class>com.allen_sauer.gwt.log.server.RemoteLoggerServiceImpl</servlet-class>
	</servlet>

	<servlet-mapping>
		<servlet-name>remoteLoggerServiceImpl</servlet-name>
		<url-pattern>/demo/gwt-log</url-pattern>
	</servlet-mapping>

	<servlet-mapping>
		<servlet-name>remoteLoggerServiceImpl</servlet-name>
		<url-pattern>/gettingstarted/gwt-log</url-pattern>
	</servlet-mapping>

	<servlet-mapping>
		<servlet-name>remoteLoggerServiceImpl</servlet-name>
		<url-pattern>/clientserverdemo/gwt-log</url-pattern>
	</servlet-mapping>

	<!-- IncrementService Servlet for clientserverdemo -->

	<servlet>
		<servlet-name>incrementServiceImpl</servlet-name>
		<servlet-class>com.allen_sauer.gwt.log.clientserverdemo.server.IncrementServiceImpl</servlet-class>
	</servlet>

	<servlet-mapping>
		<servlet-name>incrementServiceImpl</servlet-name>
		<url-pattern>/clientserverdemo/increment</url-pattern>
	</servlet-mapping>

</web-app>


